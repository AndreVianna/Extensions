<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DotNetToolbox.Environment</RootNamespace>
    <Title>DotNetToolbox Environment Library</Title>
    <Version>9.0.0</Version>
    <Authors>Andre Vianna</Authors>
    <Company>D0tN3tC0d3r5</Company>
    <PackageTags>DotNet;Toolbox;Environment;Library;</PackageTags>
    <PackageProjectUrl>https://github.com/D0tN3tC0d3r5/DotNetToolbox</PackageProjectUrl>
    <Description>DotNetToolbox.Environment: A comprehensive utility library for handling the environment resources.</Description>
    <Copyright>© Andre Vianna 2023</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>
      DotNetToolbox.Environment Version 9.0.0:

      Stable release of DotNetToolbox.Environment, a comprehensive utility library for handling the environment resources.
    </PackageReleaseNotes>
    <PackageOutputPath>pkgs\$(Configuration)</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <Deterministic>false</Deterministic>
    <AssemblyName>DotNetToolbox.Environment</AssemblyName>
    <AssemblyVersion>9.0.0.*</AssemblyVersion>
    <FileVersion>9.0.0</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>DotNetToolbox.snk</AssemblyOriginatorKeyFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <NoWarn>$(NoWarn);DV2001;DV2002</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="pkgs\**" />
    <EmbeddedResource Remove="pkgs\**" />
    <None Remove="pkgs\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\icon.png">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\..\LICENSE">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup Condition=" '$(Configuration)' == 'Debug'">
    <ProjectReference Include="..\Environment.Abstractions\DotNetToolbox.Environment.Abstractions.csproj" />
    <ProjectReference Include="..\Core\DotNetToolbox.Core.csproj" />
    <ProjectReference Include="..\Results\DotNetToolbox.Results.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(Configuration)' == 'Release'">
    <PackageReference Include="DotNetToolbox.Environment.Abstractions" Version="9.0.0" />
    <PackageReference Include="DotNetToolbox.Core" Version="9.0.0" />
    <ProjectReference Include="DotNetToolbox.Results" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).UnitTests" PublicKey="" />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" PublicKey="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.49.2-preview.0.69" />
  </ItemGroup>

</Project>
